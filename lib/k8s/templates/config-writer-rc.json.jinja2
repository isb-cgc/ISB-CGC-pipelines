{
      "apiVersion": "v1",
      "kind": "ReplicationController",
      "metadata": {
          "name": "config-writer"
      },
      "spec": {
          "replicas": 1,
          "selector": {
              "role": "config-writer"
          },
          "template": {
              "metadata": {
                  "labels": {
                      "role": "config-writer"
                  }
              },
              "spec": {
                  "containers": [
                      {
                          "name": "config-writer",
                          "image": "b.gcr.io/isb-cgc-public-docker-images/isb-cgc-pipelines:latest",
                          "ports": [
                              {
                                  "name": "config-writer",
                                  "containerPort": 3308
                              }
                          ],
                          "volumeMounts": [
                              {
                                  "name": "temp-data",
                                  "mountPath": "/temp-data",
                                  "readOnly": "true"
                              }
                          ]
                      }
                  ],
                  "volumes": [
                      {
                          "name": "temp-data",
                          "hostPath": {
                              "path": "/tmp/config-temp-data"
                          }
                      }
                  ]
              }
          }
      }
  }