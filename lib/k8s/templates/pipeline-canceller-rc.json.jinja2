{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "pipeline-canceller"
    },
    "spec": {
        "replicas": {{ replicas }},
        "selector": {
            "role": "pipeline-canceller"
        },
        "template": {
            "metadata": {
                "labels": {
                    "role": "pipeline-canceller"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "pipeline-canceller",
                        "image": "b.gcr.io/isb-cgc-public-docker-images/isb-cgc-pipelines:latest",
                        "command": ["pipelineJobCanceller", "--config", "\"${PIPELINE_CONFIG}\""],
                        "volumeMounts": [
                            {
                                "name": "config",
                                "mountPath": "/etc/isb-cgc-pipelines/config",
                                "readOnly": "true"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "config"
                    }
                ]
            }
        }
    }
}